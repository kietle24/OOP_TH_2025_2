package quanly;

public abstract class NhanVien {
	protected final String maSoNV ; 
	protected String hoTen  ; 
	protected int dienThoai; 
	protected String luongCanBan ; 
	
	public NhanVien(String maSoNV, String hoTen, int dienThoai, String luongCanBan) {
		if(maSoNV == null || maSoNV.trim().isEmpty())  { 
			throw new IllegalArgumentException(" ma so khong duoc rong ") ;
		}
		this.maSoNV = maSoNV;
		this.hoTen = hoTen;
		this.dienThoai = dienThoai;
		this.luongCanBan = luongCanBan;
	}
	
	
	public String getHoTen() {
		return hoTen;
	}


	public void setHoTen(String hoTen) {
		if(hoTen == null || hoTen.trim().isEmpty()) {  
			throw new IllegalArgumentException("ho ten khong duoc rong ") ;
		}
		this.hoTen = hoTen.trim();
	}


	public int getDienThoai() {
		return dienThoai;
	}


	public void setDienThoai(int dienThoai) {
		this.dienThoai = dienThoai;
	}


	public String getLuongCanBan() {
		return luongCanBan;
	}


	public void setLuongCanBan(String luongCanBan) {
		this.luongCanBan = luongCanBan;
	}


	public String getMaSoNV() {
		return maSoNV;
	}
	public abstract double tinhLuong() ; 

	@Override
	public String toString() {
		return String.format("%-12s | %-10 | %d | %d "," Ma NV " ,"Ho Va Ten " , " SDT" , "Tien Luong") ; 
		
	}
	
	
	
}
