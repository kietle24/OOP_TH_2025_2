package quanly;

public class Main {
	public static void main(String[] args) {
		QuanLyNhanVien qlnv = new QuanLyNhanVien() ; 
		//them 5 nhan vien hop le 
		try {

			NhanVien nv1 = new NhanVienVanPhong("NV01", "An", "0909123456", 2.5);
	        NhanVien nv2 = new NhanVienVanPhong("NV02", "Bình", "0912345678", 3.0);
	        NhanVien nv3 = new NhanVienVanPhong("NV03", "Chi", "0934567890", 2.8);
	        NhanVien nv4 = new NhanVienBanHang("NV04", "Dũng", "0945123987", 30000000); // doanh số 30tr
	        NhanVien nv5 = new NhanVienBanHang("NV05", "Hà", "0986037474", 15000000); 
	        // them vao danh sach 
	        qlnv.themNhanVien(nv1);
	        qlnv.themNhanVien(nv2);
	        qlnv.themNhanVien(nv3);
	        qlnv.themNhanVien(nv4);
	        qlnv.themNhanVien(nv5);
	        // hien thi danh sach 
	        System.out.println("Danh Sach Nhan Vien ");
	        System.out.println(qlnv.inTieuDe()); 
	        qlnv.hienThiDanhsach();
	        System.out.println();
	        
		} catch (Exception e) {
			System.out.println("loi them nhan vien " + e.getMessage());
		}
		
		try {
			System.out.println("kiem tra ma so nhan vien rong");
			 NhanVien nvloiten1 = new NhanVienBanHang("", "Hà", "0986037474", 15000000);
			qlnv.themNhanVien(nvloiten1);
		} catch (Exception e) {
			System.out.println( e.getMessage());
		}
		 
		try {
			System.out.println("kiem tra loi ho va ten rong");
			 NhanVien nvloiten2 = new NhanVienBanHang("NV06", "", "0986037474", 15000000);
			qlnv.themNhanVien(nvloiten2);
		} catch (Exception e) {
			System.out.println( e.getMessage());
		}
		
		try {
			System.out.println("kiem tra so dien thoai it nhat 9 so ");
			 NhanVien nvloiten3 = new NhanVienBanHang("NV06", "Tuan", "09860", 15000000);
			qlnv.themNhanVien(nvloiten3);
		} catch (Exception e) {
			System.out.println(e.getMessage());
		}
		
		try {
			System.out.println("kiem tra luong can ban khong duoc < 0  ");
			 NhanVien nvloiten3 = new NhanVienBanHang("NV08", "Dung", "0986037474", 0);
			qlnv.themNhanVien(nvloiten3);
		} catch (Exception e) {
			System.out.println(e.getMessage());
		}
		
		
		try {
			System.out.println("kiem tra he so luong khong hop le  ");
			 NhanVien nvloi4 = new NhanVienVanPhong("NV08", "Dung", "0986037474", 1.7);
			qlnv.themNhanVien(nvloi4);
		} catch (Exception e) {
			System.out.println(e.getMessage());
		}
		
		
		
		
		
        
    	
	}

	
	
}
