package qlhp;
import java.util.*;
public class QuanLyHocPhan {
	private List<HocPhan> dshp ; 
	public QuanLyHocPhan(){ 
		dshp = new ArrayList<>() ; 	
	}
	public List<HocPhan> getDshp() {
		return dshp;
	}
	public void setDshp(List<HocPhan> dshp) {
		this.dshp = dshp;
	}
	public void inDanhSach() {  
		  for (HocPhan hocPhan : dshp) {
		  System.out.println(hocPhan);
		  }
	}
	// Phương thức thêm học phần vào danh sách
	public boolean addHocPhan(HocPhan hocPhan) {
	    // Kiểm tra nếu học phần có mã số trùng thì không thêm
	    for (HocPhan hp : dshp) {
	        if (hp.getMssv().equals(hocPhan.getMssv())) {
	            return false;  // Trả về false nếu mã số học phần trùng
	        }
	    }

	    // Nếu không có mã số học phần trùng, thêm học phần vào danh sách
	    dshp.add(hocPhan);
	    return true;  // Trả về true nếu học phần được thêm thành công
	}

	
	
	
	



}

