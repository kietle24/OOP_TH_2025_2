package quanlynhanvien;

public class NhanVienBanhang extends NhanVien {
	private static double DINH_MUC  = 20e6 ; 
	private double doanhSoBanHang ;
	public NhanVienBanhang() {
		this.doanhSoBanHang = 0.0  ; 
	}
	public NhanVienBanhang(String manv, String hoVaTen, String dienThoai, double luongCanBan) {
		super(manv, hoVaTen, dienThoai, luongCanBan);
		setDoanhSoBanHang(doanhSoBanHang) ;
	}
	
	public double getDoanhSoBanHang() {
		return doanhSoBanHang;
	}
	public void setDoanhSoBanHang(double doanhSoBanHang) {
		if(doanhSoBanHang <= 0 ) { 
			throw new IllegalArgumentException("doanh so ban hang  duoc nho hon 0 ") ; 
		}
	
		this.doanhSoBanHang = doanhSoBanHang;
	}
	@Override
	public double tinhLuong() {
			double thuNhapTangThem = 
					(doanhSoBanHang  >= DINH_MUC ? 0.03 : 0  )*doanhSoBanHang ; 
		return luongCanBan +thuNhapTangThem ;
	}
	@Override
	public String toString() {
		return super.toString()  + " " + this.doanhSoBanHang  ;  
	}
	

}
