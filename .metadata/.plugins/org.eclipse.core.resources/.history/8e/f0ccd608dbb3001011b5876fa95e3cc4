package qlhp;
import java.text.DecimalFormat;
import java.time.LocalDate;
import java.time.LocalDateTime;
import java.time.format.DateTimeFormatter;
public class HocPhanTrucTiep extends HocPhan {
	private String diaChiHọc  ; 
	private LocalDateTime  ngayGioHoc ;
	
	
	// constructor 
	public HocPhanTrucTiep(
			String mssv, 
			String hoTen, 
			double hocPhi, 
			LocalDate ngayBatDau, 
			LocalDate ngayKetThuc,
			double diemMucTieu, 
			double ketQua ,
			String diaChiHọc, LocalDateTime ngayGioHoc) {
		super(mssv, hoTen, hocPhi, ngayBatDau, ngayKetThuc, diemMucTieu, ketQua);
		this.diaChiHọc = diaChiHọc;
		this.ngayGioHoc = ngayGioHoc;
		
	}
	
	@Override
	public double tinhHocPhi() {		
		return this.hocPhi  ;  
	}
	@Override
	public String toString() {
	    return super.toString() + "dia chi hoc "+ this.diaChiHọc+ "ngay gio hoc " + 
	           this.ngayGioHoc.format(DateTimeFormatter.ofPattern("yyyy-MM-dd"));
	}
}

	

