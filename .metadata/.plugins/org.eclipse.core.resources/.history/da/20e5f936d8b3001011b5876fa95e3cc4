package qlhp;

import java.time.LocalDate;

import java.time.LocalDate;

public class Main {
    public static void main(String[] args) {
        QuanLyHocPhan qlhp = new QuanLyHocPhan(); // Khởi tạo đối tượng QuanLyHocPhan

        try {
            // Tạo các đối tượng HocPhanTrucTuyen
            HocPhanTrucTuyen hv1 = new HocPhanTrucTuyen(
                "A001", "Nguyen Van A", 2e6, 
                LocalDate.of(2000, 1, 1), 
                LocalDate.of(2000, 12, 1), 
                990.0, 550.0, "https://example.com"
            );

            HocPhanTrucTuyen hv2 = new HocPhanTrucTuyen(
                "A002", "Nguyen Van B", 3e6, 
                LocalDate.of(2000, 1, 1), 
                LocalDate.of(2000, 12, 1), 
                550.0, 550.0, "https://example1.com"
            );

            HocPhanTrucTuyen hv3 = new HocPhanTrucTuyen(
                "A003", "Nguyen Van C", 4e6, 
                LocalDate.of(2000, 1, 1), 
                LocalDate.of(2000, 12, 2), 
                660.0, 550.0, "https://example2.com"
            );

            // Thêm học phần vào danh sách
            boolean success1 = qlhp.addHocPhan(hv1);  // Thêm hv1 vào danh sách
            boolean success2 = qlhp.addHocPhan(hv2);  // Thêm hv2 vào danh sách
            boolean success3 = qlhp.addHocPhan(hv3);  // Thêm hv3 vào danh sách

            // In thông báo nếu thêm học phần không thành công
            if (!success1) System.out.println("Thêm học phần hv1 thất bại");
            if (!success2) System.out.println("Thêm học phần hv2 thất bại");
            if (!success3) System.out.println("Thêm học phần hv3 thất bại");

            // Hiển thị danh sách học phần
            qlhp.inDanhSach();  // Gọi phương thức inDanhSach để in danh sách học phần

        } catch (Exception e) {
            System.out.println("Có lỗi khi thêm học phần: " + e.getMessage());
        }
    }
}
       
			
		
	

}
}
	
